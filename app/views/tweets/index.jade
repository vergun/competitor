#footer-region

h2#tweets-total= tweets.length + " Tweets"
h4.subheader Tracking keywords

dl.sub-nav
  dt Filter:
  each keyword in keywords
    dd.active
      a.update-keyword.group-toggle.selected(href='#')= keyword
  dd
    a |
  dd.active
    a.update-chart.chart-types(data-chart='Pie', href='#') Pie
  dd
    a.update-chart.chart-types(data-chart='Doughnut', href='#') Doughnut
  dd
    a.update-chart.chart-types(data-chart='Pie', href='#') Polar area
  dd
    a.update-chart.chart-types(data-chart='Pie', href='#') Bar
  dd
    a.update-chart.chart-types(data-chart='Pie', href='#') Line
  dd
    a.update-chart.chart-types(data-chart='Pie', href='#') Radar
  dd
    a |
  dd
    a.update-chart(href='#', data-reveal-id='date-modal') Date range
  
.current-chart
  canvas#myChart
.current-chart-legend
  each dataPoint in chartData
    br
    .chartBox(style= "background-color:" + dataPoint.color + "; display:inline-block")
    span= dataPoint.keyword + " (" + dataPoint.value + " tweets  " + dataPoint.percentage + "%)"

hr
ul.tweets
  each tweet in displayedTweets
    li.tweet 
      img(src=tweet.user.profile_image_url)
      span.user-screen-name=tweet.user.screen_name 
      span.user-name=tweet.user.name
      span.text= tweet.text
      span.keywords Tracked by: #{tweet.keywords}
      span.lang= tweet.lang
      span.source= tweet.source
      span.user-friends-count=tweet.user.friends_count + " Friends"
      
  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)


h1 Tweets by language
ul.tweets
  each val in lang
    li= val[0] + ": " + val[1] + " : " + (Math.round((val[1]/tweets.length)*100)).toString() + "%"

h2 Tweets by source
ul.tweets
  each val in source
    - var html = "<li>" + val[0].charAt(0).toUpperCase() + val[0].slice(1) + ": " + val[1] + " : " + (Math.round((val[1]/tweets.length)*100)).toString() + "%" + "</li>"
    | !{html}